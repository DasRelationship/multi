{% if showSocial or showPodcast %}
<style>
    .social-icons {
        display: flex;
        gap: 15px;
        text-align: center;
        justify-content: center;
        align-items: center;
        margin-bottom: 15px;
    }

    .social-icons a {
        text-decoration: none;
        color: inherit;
        transition: transform 0.2s ease, color 0.2s ease;
    }

    .social-icons a:hover {
        transform: scale(1.2);
        color: #8cbae9;
    }

    body {
        text-align: center;
        justify-content: center;
        align-items: center;
    } 
</style>
{% endif %}